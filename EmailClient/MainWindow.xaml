<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GraphEmailClient.MainWindow"
        Title="Graph API Email client" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.Resources>
            <VisualBrush x:Key="EmailRecipientHint" Stretch="None" AlignmentX="Left" AlignmentY="Top">
                <VisualBrush.Transform>
                    <TranslateTransform X="4" Y="7" />
                </VisualBrush.Transform>
                <VisualBrush.Visual>
                    <Grid>
                        <TextBlock Text="Enter email" FontWeight="Normal" Foreground="Gray"
                         FontSize="12" TextAlignment="Justify"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
            <VisualBrush x:Key="EmailHeaderHint" Stretch="None" AlignmentX="Left" AlignmentY="Top">
                <VisualBrush.Transform>
                    <TranslateTransform X="4" Y="7" />
                </VisualBrush.Transform>
                <VisualBrush.Visual>
                    <Grid>
                        <TextBlock Text="Email header text" FontWeight="Normal" Foreground="Gray"
                         FontSize="12" TextAlignment="Justify"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
            <VisualBrush x:Key="EmailBodyHint" Stretch="None" AlignmentX="Left" AlignmentY="Top">
                <VisualBrush.Transform>
                    <TranslateTransform X="4" Y="7" />
                </VisualBrush.Transform>
                <VisualBrush.Visual>
                    <Grid>
                        <TextBlock Text="Email body" FontWeight="Normal" Foreground="Gray"
                         FontSize="12" TextAlignment="Justify"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
            <VisualBrush x:Key="EmailSignatureHint" Stretch="None" AlignmentX="Left" AlignmentY="Top">
                <VisualBrush.Transform>
                    <TranslateTransform X="4" Y="7" />
                </VisualBrush.Transform>
                <VisualBrush.Visual>
                    <Grid>
                        <TextBlock Text="Signature (HTML)" FontWeight="Normal" Foreground="Gray"
                         FontSize="12" TextAlignment="Justify"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Resources>
        <StackPanel Grid.Row="0" Margin="5,5,5,0" VerticalAlignment="Top">
            <Grid HorizontalAlignment="Left" Width="566">
                <Label HorizontalAlignment="Left" Content="Not Signed" Margin="0,2,0,2" x:Name="UserName" Width="401" Height="30"/>
                <Button HorizontalAlignment="Left" Content="Sign In" Margin="406,0,0,0" Click="SignIn" x:Name="SignInButton" Width="136" Height="34">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <!-- "<Setter Property="IsEnabled" Value="False" /> -->
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <GroupBox Margin="0,0,0,0" Header="Recipient Email address" Height="400">

                <Grid HorizontalAlignment="Left" Width="736" Height="338" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" Height="34" FontSize="12" TextWrapping="Wrap" VerticalAlignment="Top"
                                        x:Name="EmailRecipientText" Margin="10,10,10,0" TabIndex="1" Padding="3">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmailRecipientText}" Value="">
                                        <Setter Property="Background" Value="{StaticResource EmailRecipientHint}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button Grid.Column="1" Grid.Row="0" Content="Send Html Email" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Width="136" RenderTransformOrigin="-0.013,0.15" Click="SendHtmlEmail" Height="34" IsDefault="True" TabIndex="2" Background="#FFDDDDDD"/>
                    <Button Grid.Column="2" Grid.Row="0" Content="Send Text Email" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Width="136" RenderTransformOrigin="-0.013,0.15" Click="SendEmail" Height="34" IsDefault="True" TabIndex="2" Background="#FFDDDDDD"/>
                    <Button Grid.Column="3" Grid.Row="0" Content="Add Attachment" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="136" RenderTransformOrigin="-0.013,0.15" Click="AddAttachment" Height="34" IsDefault="True" TabIndex="2" Background="#FFDDDDDD"/>
                    <Button Grid.Column="4" Grid.Row="0" Content="Add Inline Image" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.013,0.15" Click="AddInlineImage" Height="34" IsDefault="True" TabIndex="2" Background="#FFDDDDDD"/>

                    <TextBox Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Stretch" Height="41"
                        FontSize="12" TextWrapping="Wrap" VerticalAlignment="Top"
                                        x:Name="EmailHeader" Margin="10,10,10,0" TabIndex="1" Padding="3" Grid.ColumnSpan="4">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmailHeader}" Value="">
                                        <Setter Property="Background" Value="{StaticResource EmailHeaderHint}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox Grid.Column="0" Grid.Row="2"  HorizontalAlignment="Stretch" Height="200" AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible" FontSize="12" TextWrapping="Wrap" VerticalAlignment="Top"
                                        x:Name="EmailBody" Margin="10,10,10,0" TabIndex="1" Padding="3" Grid.ColumnSpan="4">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmailBody}" Value="">
                                        <Setter Property="Background" Value="{StaticResource EmailBodyHint}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox Grid.Column="0" Grid.Row="3" HorizontalAlignment="Stretch" Height="100" AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto" FontSize="12" TextWrapping="Wrap" VerticalAlignment="Top"
                                        x:Name="EmailSignature" Margin="10,10,10,0" TabIndex="1" Padding="3" Grid.ColumnSpan="4">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmailSignature}" Value="">
                                        <Setter Property="Background" Value="{StaticResource EmailSignatureHint}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button Grid.Column="3" Grid.Row="4" Content="Send Emails From CSV" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" Click="SendEmailsFromCsv" Height="34" Background="#FFDDDDDD"/>
                </Grid>

            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="Contact Follow-ups">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Import Contacts" Width="140" Height="30" Click="ImportContacts" Margin="0,0,10,0" />
                        <TextBlock Text="Import a CSV with Company, Point Person, and Email columns." VerticalAlignment="Center" TextWrapping="Wrap" Width="400"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" Margin="0,10,0,0" x:Name="ContactsGrid" ItemsSource="{Binding Contacts}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="2*" />
                            <DataGridTextColumn Header="Point Person" Binding="{Binding PointPerson}" Width="2*" />
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*" />
                            <DataGridTextColumn Header="Last Email Sent" Binding="{Binding LastEmailDisplay}" Width="*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding FollowUpStatus}" Width="*" />
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Background" Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FollowUpDue}" Value="True">
                                        <Setter Property="Background" Value="#FFFFE5E5" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
